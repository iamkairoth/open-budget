---
import Layout from '../layouts/Layout.astro';
import BudgetPlanView from '../modules/csp/BudgetPlanView';
---

<Layout title="Your Financial Blueprint">
  <div class="py-12">
    {/* This component handles the printing logic */}
    <BudgetPlanView client:only="react" />
    
    {/* Navigation Footer (Hidden when printing) */}
    <div class="max-w-5xl mx-auto px-6 mt-12 pt-8 border-t border-slate-200 text-center print:hidden">
      <p class="text-slate-500 mb-4">Happy with your numbers?</p>
      <a 
        href="/guide" 
        class="inline-flex items-center gap-2 px-6 py-3 bg-slate-900 text-white font-bold rounded-xl hover:bg-slate-800 transition-colors"
      >
        <span>Next: Set Up Automation</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
      </a>
    </div>
  </div>
</Layout>